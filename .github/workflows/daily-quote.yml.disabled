# Daily Quote Sender
# Runs every day at 6:00 AM Israel time (3:00 AM UTC)
# Also registers bot commands on push to main to keep menu in sync

name: Daily Quote

on:
  schedule:
    # Run at BOTH possible 6am Israel times to handle DST
    # Summer (IDT, UTC+3): 6am Israel = 3am UTC
    - cron: "0 3 * * *"
    # Winter (IST, UTC+2): 6am Israel = 4am UTC
    - cron: "0 4 * * *"

  # Run on push to main to update commands immediately
  push:
    branches: [main]

  # Allow manual trigger for testing
  workflow_dispatch:
    inputs:
      dry_run:
        description: "Dry run (log instead of send)"
        required: false
        default: "false"
        type: choice
        options:
          - "true"
          - "false"

jobs:
  update-and-send:
    name: Update Commands & Send Quotes
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Cache pip dependencies
        uses: actions/cache@v4
        with:
          path: ~/.cache/pip
          key: ${{ runner.os }}-pip-${{ hashFiles('ashlagyomibot/requirements.txt') }}
          restore-keys: |
            ${{ runner.os }}-pip-

      - name: Install dependencies
        working-directory: ashlagyomibot
        run: |
          python -m pip install --upgrade pip
          pip install -e .

      - name: Register bot commands (always)
        working-directory: ashlagyomibot
        env:
          TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
          TELEGRAM_CHAT_ID: ${{ secrets.TELEGRAM_CHAT_ID }}
        run: python scripts/register_commands.py

      - name: Send daily quotes (scheduled/manual only)
        if: github.event_name == 'schedule' || github.event_name == 'workflow_dispatch'
        working-directory: ashlagyomibot
        env:
          TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
          TELEGRAM_CHAT_ID: ${{ secrets.TELEGRAM_CHAT_ID }}
          TELEGRAM_CHANNEL_ID: ${{ secrets.TELEGRAM_CHANNEL_ID }}
          ENVIRONMENT: production
          LOG_LEVEL: INFO
          DRY_RUN: ${{ github.event.inputs.dry_run || 'false' }}
        run: python -m src.bot.broadcaster

      - name: Report status
        if: always()
        run: |
          echo "Job completed"
          echo "Status: ${{ job.status }}"
          echo "Trigger: ${{ github.event_name }}"
          echo "Timestamp: $(date -u +%Y-%m-%dT%H:%M:%SZ)"
